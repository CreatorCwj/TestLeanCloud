<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--bar上面的部分的颜色-->
        <item name="android:colorPrimaryDark">@color/color400</item>
        <item name="android:colorPrimary">@color/color500</item>
        <!--bar样式-->
        <item name="toolbarStyle">@style/toolbar</item>
        <!--中间背景色-->
        <item name="android:windowBackground">@color/color200</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/color600</item>

        <!--控件标记颜色和点击效果颜色(如checkbox等),往往设置了背景的话就没有作用了-->
        <item name="android:colorControlHighlight">@color/color600</item>
        <item name="colorAccent">@color/color500</item>

        <item name="android:textColor">@color/color800</item>
    </style>

    <!--Toolbar style-->
    <style name="toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="titleTextColor">@color/color50</item>
    </style>

</resources>

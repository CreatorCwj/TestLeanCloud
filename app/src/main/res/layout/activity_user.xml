<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />

        <EditText
            android:id="@+id/setUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入username"
            android:maxLength="15" />

        <EditText
            android:id="@+id/setPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入password"
            android:maxLength="10" />

        <EditText
            android:id="@+id/setEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/setDisplayname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入displayname"
            android:maxLength="10" />

        <EditText
            android:id="@+id/setMobilePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入手机号"
            android:inputType="number"
            android:maxLength="11" />

        <EditText
            android:id="@+id/setCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="6" />

        <Button
            android:id="@+id/signUpUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册用户" />

        <Button
            android:id="@+id/loginUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登陆用户" />

        <Button
            android:id="@+id/logoutUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注销用户" />

        <Button
            android:id="@+id/updUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更改用户名" />

        <Button
            android:id="@+id/updPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更改密码" />

        <Button
            android:id="@+id/resetPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重置密码" />

        <Button
            android:id="@+id/updEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改邮箱" />

        <Button
            android:id="@+id/setMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置手机号" />

        <Button
            android:id="@+id/signMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证手机号" />
    </LinearLayout>

</ScrollView>

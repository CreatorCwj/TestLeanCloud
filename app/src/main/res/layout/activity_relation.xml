<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />

        <EditText
            android:id="@+id/setPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入Post标题"
             />

        <Button
            android:id="@+id/addPostBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加Post" />

        <EditText
            android:id="@+id/setPostId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入关联Post的id" />

        <EditText
            android:id="@+id/setCommentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入评论内容" />

        <Button
            android:id="@+id/addCommentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加评论" />

        <EditText
            android:id="@+id/setCommentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入评论id" />

        <Button
            android:id="@+id/getCommentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取评论" />

        <Button
            android:id="@+id/getCommentBySubClassBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通过自子类获取评论" />

        <Button
            android:id="@+id/addRelationsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="增加relations" />

        <Button
            android:id="@+id/getRelationsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取relations" />

    </LinearLayout>

</ScrollView>
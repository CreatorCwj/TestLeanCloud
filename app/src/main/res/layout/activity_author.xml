<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />

        <EditText
            android:id="@+id/setPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入post-content" />

        <Button
            android:id="@+id/createUserPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="增加用户完全私有的post" />

        <Button
            android:id="@+id/createUsersPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="指定多个user的读写权限" />

        <Button
            android:id="@+id/createPostByDefaultACL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置默认ACL" />
    </LinearLayout>

</ScrollView>

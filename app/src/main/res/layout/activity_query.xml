<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />

        <EditText
            android:id="@+id/inputPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入playerName" />

        <Button
            android:id="@+id/queryByPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本查询" />

        <Button
            android:id="@+id/queryContainedIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本查询-包含多值" />

        <!--<EditText
            android:id="@+id/inputStudentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入student的id" />-->

        <Button
            android:id="@+id/queryMatchesKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多表查询" />

        <Button
            android:id="@+id/querySelectKeys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询指定列" />

        <Button
            android:id="@+id/queryArrayAndString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数组值和字符串值查询" />

        <Button
            android:id="@+id/queryRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关系型查询" />

        <Button
            android:id="@+id/queryCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计数查询" />

        <Button
            android:id="@+id/queryOr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="混合查询" />
    </LinearLayout>

</ScrollView>
